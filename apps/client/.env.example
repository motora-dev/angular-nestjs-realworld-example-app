# ===========================================
# Client (SSR Server) Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# Build
# -------------------------------------------
# Which environment file to use for build (develop, preview, production)
# Used by: pnpm build (via package.json)
BUILD_CONFIGURATION="develop"

# -------------------------------------------
# Server
# -------------------------------------------
NODE_ENV="production"
PORT="8080"

# -------------------------------------------
# Basic Auth (optional)
# -------------------------------------------
# Set BASIC_AUTH_ENABLED=true to enable basic authentication
BASIC_AUTH_ENABLED="false"
BASIC_AUTH_USER="admin"
BASIC_AUTH_PASSWORD="password"

# -------------------------------------------
# ISR (Incremental Static Regeneration)
# -------------------------------------------
# Secret token for ISR invalidation endpoint
ISR_SECRET="your-isr-secret-token"
