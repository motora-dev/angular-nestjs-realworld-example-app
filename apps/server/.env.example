# ===========================================
# Server Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# Database
# -------------------------------------------
DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-ID]:[YOUR-PASSWORD]@[host]:[port]/postgres?pgbouncer=true&schema=realworld"

# -------------------------------------------
# Server
# -------------------------------------------
NODE_ENV="development"
PORT="4000"

# -------------------------------------------
# Client / CORS / CSRF
# -------------------------------------------
CLIENT_URL="http://localhost:4200"
CORS_ORIGINS="http://localhost:4200"
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CSRF_SECRET="your-csrf-secret-key"

# -------------------------------------------
# Google OAuth
# -------------------------------------------
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:4000/api/auth/callback"

# -------------------------------------------
# JWT (RS256)
# -------------------------------------------
# Generate keys with:
#   openssl genrsa -out private.pem 2048
#   openssl rsa -in private.pem -pubout -out public.pem
#
# Convert to single line for .env:
#   node -e "console.log('JWT_PRIVATE_KEY=' + JSON.stringify(require('fs').readFileSync('private.pem', 'utf8').trim()))"
#   node -e "console.log('JWT_PUBLIC_KEY=' + JSON.stringify(require('fs').readFileSync('public.pem', 'utf8').trim()))"

JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
