// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma-client"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["realworld"]
}

model User {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String  @unique
  email    String  @unique
  bio      String?
  image    String?

  accounts      Account[]
  articles      Article[]
  comments      Comment[]
  favorites     Favorite[]
  followers     Follow[]       @relation("following")
  following     Follow[]       @relation("followers")
  refreshTokens RefreshToken[]

  @@schema("realworld")
}

model Account {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId   Int
  provider String
  sub      String
  email    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, sub])
  @@index([email])
  @@schema("realworld")
}

model Article {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  slug        String   @unique
  title       String
  description String?  @db.Text
  body        String   @db.Text
  tags        String[]

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  comments  Comment[]
  favorites Favorite[]

  @@index([tags])
  @@index([userId])
  @@schema("realworld")
}

model Comment {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  body String @db.Text

  articleId Int
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@index([userId])
  @@schema("realworld")
}

model Follow {
  followerId  Int
  followingId Int
  createdAt   DateTime @default(now())

  follower  User @relation("followers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@schema("realworld")
}

model Favorite {
  userId    Int
  articleId Int
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@id([userId, articleId])
  @@index([userId])
  @@index([articleId])
  @@schema("realworld")
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@schema("realworld")
}
